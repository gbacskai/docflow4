{
  "name": "docflow4",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production",
    "build:purge": "ng build --configuration production && npm run purge:css",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:headless": "HEADLESS=true ng test --watch=false",
    "test:ci": "NODE_ENV=ci ng test --watch=false --browsers=ChromeCI",
    "test:ci-smart": "node run-ci-tests.js",
    "test:coverage": "HEADLESS=true ng test --watch=false --code-coverage",
    "test:all": "npm run test:headless && npm run test:e2e",
    "test:e2e": "npm start & SERVER_PID=$! && npx wait-on http://localhost:4200 && npm run cypress:run && npm run test:report && kill $SERVER_PID",
    "test:node-scripts": "echo 'Node.js tests converted to Cypress - use npm run test:cypress instead'",
    "test:reset-code": "node tests/test-send-reset-code-simple.js",
    "test:reset-code-full": "node tests/test-send-reset-code.js",
    "test:cypress": "npm start & SERVER_PID=$! && npx wait-on http://localhost:4200 && npm run cypress:run && npm run test:report && kill $SERVER_PID",
    "test:cypress:headless": "cypress run --headless",
    "test:cypress:open": "cypress open",
    "cypress:run": "cypress run --headless --reporter mochawesome --reporter-options reportDir=cypress/report/mochawesome-report,overwrite=false,html=false,json=true,timestamp=mmddyyyy_HHMMss",
    "test:report": "node generate-test-report.js",
    "test:scripts": "echo 'Node.js tests converted to Cypress - use npm run test:cypress instead'",
    "purge:css": "purgecss --config purgecss.config.js --output dist/docflow4/browser/",
    "purge:analyze": "purgecss --config purgecss.config.js --output dist/purged/",
    "css:analyze": "echo 'Analyzing CSS bundle sizes...' && find src -name '*.less' -exec wc -c {} + | sort -n",
    "css:optimize": "node optimize-css.js",
    "css:restore": "find src -name '*.backup' -exec sh -c 'mv \"$1\" \"${1%.backup}\"' _ {} \\;"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "engines": {
    "node": "24.5.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@angular/common": "^20.2.1",
    "@angular/compiler": "^20.2.1",
    "@angular/core": "^20.2.1",
    "@angular/forms": "^20.2.1",
    "@angular/platform-browser": "^20.2.1",
    "@angular/router": "^20.2.1",
    "@aws-sdk/client-apigatewaymanagementapi": "^3.873.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.879.0",
    "@aws-sdk/client-dynamodb": "^3.873.0",
    "@aws-sdk/lib-dynamodb": "^3.873.0",
    "aws-amplify": "^6.15.5",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.2.0",
    "@angular/cli": "^20.2.0",
    "@angular/compiler-cli": "^20.2.1",
    "@aws-amplify/backend": "^1.16.1",
    "@aws-amplify/backend-cli": "^1.8.0",
    "@playwright/test": "^1.55.0",
    "@types/jasmine": "~5.1.9",
    "cypress": "^15.0.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "less": "^4.4.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "puppeteer": "^24.17.0",
    "purgecss": "^7.0.2",
    "typescript": "~5.9.2",
    "wait-on": "^8.0.4"
  }
}
